<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#2e4e7e"
    tools:context=".envi.EnvironmentalMonitoringFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:text="我的种植园"
            android:textSize="20sp"></TextView>

        <RelativeLayout
            android:id="@+id/item_box_1"
            android:layout_width="370dp"
            android:layout_height="120dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="70dp"
            android:background="@drawable/style_radius">

            <ImageView
                android:id="@+id/iv_green_point"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:src="@drawable/green_point"></ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="38dp"
                android:text="98"
                android:textSize="20sp"></TextView>

            <TextView
                android:id="@+id/plantation_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@+id/iv_green_point"
                android:gravity="center"
                android:text="灵芝种植地1号"
                android:textSize="20sp"></TextView>

            <TextView
                android:id="@+id/enter_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:text=">>"
                android:textSize="20sp"></TextView>

            <ImageView
                android:id="@+id/temperature_1"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_below="@+id/plantation_1"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/iv_green_point"
                android:src="@drawable/temperature"></ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/temperature_1"
                android:layout_toRightOf="@+id/temperature_1"
                android:text="温度：28℃"
                android:textSize="15sp"></TextView>

            <ImageView
                android:id="@+id/humidity_1"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_below="@+id/temperature_1"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/iv_green_point"
                android:src="@drawable/humidity"></ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/humidity_1"
                android:layout_toRightOf="@+id/humidity_1"
                android:text="湿度：76%"
                android:textSize="15sp"></TextView>

            <ImageView
                android:id="@+id/light_1"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_below="@+id/humidity_1"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/iv_green_point"
                android:src="@drawable/light"></ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/light_1"
                android:layout_toRightOf="@+id/light_1"
                android:text="光照：0.5lx"
                android:textSize="15sp"></TextView>

            <Button
                android:id="@+id/device_1"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_below="@+id/plantation_1"
                android:layout_marginRight="20dp"
                android:layout_toLeftOf="@+id/enter_1"
                android:background="@drawable/style_button_radius"
                android:text="设备"></Button>

            <TextView
                android:id="@+id/tv_proper_functioning"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/proper_functioning_1"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="50dp"
                android:layout_toRightOf="@+id/proper_functioning_1"
                android:text="工作正常"></TextView>

            <ImageView
                android:id="@+id/proper_functioning_1"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="220dp"
                android:layout_marginBottom="15dp"
                android:src="@drawable/proper_functioning"></ImageView>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/item_box_2"
            android:layout_width="370dp"
            android:layout_height="120dp"
            android:layout_below="@+id/item_box_1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/style_radius">

            <ImageView
                android:id="@+id/iv_green_point_2"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:src="@drawable/green_point"></ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="38dp"
                android:text="96"
                android:textSize="20sp"></TextView>

            <TextView
                android:id="@+id/plantation_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@+id/iv_green_point_2"
                android:gravity="center"
                android:text="灵芝种植地2号"
                android:textSize="20sp"></TextView>

            <TextView
                android:id="@+id/enter_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:text=">>"
                android:textSize="20sp"></TextView>

            <ImageView
                android:id="@+id/temperature_2"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_below="@+id/plantation_2"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/iv_green_point_2"
                android:src="@drawable/temperature"></ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/temperature_2"
                android:layout_toRightOf="@+id/temperature_2"
                android:text="温度：26℃"
                android:textSize="15sp"></TextView>

            <ImageView
                android:id="@+id/humidity_2"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_below="@+id/temperature_2"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/iv_green_point_2"
                android:src="@drawable/humidity"></ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/humidity_2"
                android:layout_toRightOf="@+id/humidity_2"
                android:text="湿度：80%"
                android:textSize="15sp"></TextView>

            <ImageView
                android:id="@+id/light_2"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_below="@+id/humidity_2"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/iv_green_point_2"
                android:src="@drawable/light"></ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/light_2"
                android:layout_toRightOf="@+id/light_2"
                android:text="光照：0.4lx"
                android:textSize="15sp"></TextView>

            <Button
                android:id="@+id/device_2"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_below="@+id/plantation_2"
                android:layout_marginRight="20dp"
                android:layout_toLeftOf="@+id/enter_2"
                android:background="@drawable/style_button_radius"
                android:text="设备"></Button>

            <TextView
                android:id="@+id/tv_proper_functioning_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/proper_functioning_2"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="50dp"
                android:layout_toRightOf="@+id/proper_functioning_2"
                android:text="工作正常"></TextView>

            <ImageView
                android:id="@+id/proper_functioning_2"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="220dp"
                android:layout_marginBottom="15dp"
                android:src="@drawable/proper_functioning"></ImageView>
        </RelativeLayout>

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="40dp"
            android:layout_marginBottom="80dp"
            android:src="@drawable/add_pic"></ImageView>
    </RelativeLayout>


</LinearLayout>